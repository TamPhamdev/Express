extends ../layouts/common
block content
  body
    .container
      .row
        .col-md-8.mx-auto
          h1.d-flex.align-item-center   Users
          a(href="/users/create") Create
          form(action="/users/search", method="GET").form-group.ml-auto.d-flex
            input(type="text" name="q" value=value).form-control
            button(type="submit").btn.btn-primary Search
          table.table
            tr
              th Avatar
              th Name
              th Phone
              th Action
            each user in users
              tr
                td
                  img(src="../"+user.avatar, width="32")
                td= user.name
                td= user.phone  
                td
                  a.btn.btn-light(href="/users/" + user.id) View