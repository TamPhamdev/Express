extends ../layouts/common
block content 
  h1.form-group.text-center Create User
  if errors
   each error in errors
    .alert.alert-danger=error
  form(action="/users/create", method="POST").form-group
    label(for="name") Name
    input(name="name" type="text" value=values ? values.name : "")#name.form-control
    label(for="phone") Phone
    input(name="phone" type="text"  value=values ? values.phone : "")#phone.form-control
    button.btn.btn-success Create