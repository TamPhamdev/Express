extends ../layouts/common
block content 
  h1.form-group.text-center Create User
  if errors
   each error in errors
    .alert.alert-danger=error
  .container
    .row
      .col-md-6.mx-auto
        form(action="/users/create", method="POST" enctype="multipart/form-data").form-group
          label(for="name") Name
          input(name="name" type="text" value=values ? values.name : "")#name.form-control
          label(for="phone") Phone
          input(name="phone" type="text"  value=values ? values.phone : "")#phone.form-control
          lable(for="avatar") Avatar
          input(name="avatar" type="file")#avatar.form-control-file.form-group
          button.btn.btn-primary Create