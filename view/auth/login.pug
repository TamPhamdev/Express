html
  head
    link(rel="stylesheet" ,href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/style.css")
  body(style='background-color: #f5f5f5;')
    .container
      .row.d-flex.justify-content-center.align-item-center(style='height: 100vh;')
        .col-md-6.col-sm-6.border-0
          .card-login.mx-auto.border-0
            .label.text-center
              | User
              h4(style='margin:30px 0;') Please login
            if errors
              each error in errors
                .alert.alert-danger=error  
            .card-body
              form( method="POST")
                .form-group
                  .form-label-group
                    input(name="email" type="text" placeholder="Email@demo.com" value=values ? values.email : "")#name.form-control
                .form-group
                  .form-label-group
                    input(name="password" type="password" placeholder="Password" value=values ? values.password : "")#phone.form-control
                button.btn.btn-primary Login